{
  "info": {
    "name": "Gin Todo API",
    "description": "Collection for the Gin Todo API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "List Todos",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/todos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "todos"
          ]
        }
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"buy milk\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/todos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "todos"
          ]
        }
      }
    },
    {
      "name": "Get Todo",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/todos/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "todos",
            "1"
          ]
        }
      }
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"buy oat milk\",\n  \"completed\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/todos/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "todos",
            "1"
          ]
        }
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/todos/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "todos",
            "1"
          ]
        }
      }
    }
  ]
}
